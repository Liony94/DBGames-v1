{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <script src="https://cdn.tailwindcss.com"></script>
    <body class="bg-gray-100">
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold mb-6 text-center">Rejoins-nous</h1>
        <form class="w-full max-w-sm mx-auto bg-white p-8 rounded-md shadow-md" method="post">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                    {{ form_label(registrationForm.username, 'Nom d\'utilisateur') }}
                </label>
                {{ form_widget(registrationForm.username, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                        'placeholder': 'Nom d\'utilisateur'
                    }
                }) }}
                {{ form_errors(registrationForm.username) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
                    {{ form_label(registrationForm.email, 'Email') }}
                </label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                        'placeholder': 'john@example.com'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                </label>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                        'placeholder': '********'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    {{ form_label(registrationForm.age, 'Age') }}
                </label>
                {{ form_widget(registrationForm.age, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                        'placeholder': 'Votre Age'
                    }
                }) }}
                {{ form_errors(registrationForm.age) }}
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                    {{ form_label(registrationForm.city, 'Ville') }}
                </label>
                {{ form_widget(registrationForm.city, {
                    'attr': {
                        'class': 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-indigo-500',
                        'placeholder': 'Votre ville'
                    }
                }) }}
                {{ form_errors(registrationForm.city) }}
            </div>

