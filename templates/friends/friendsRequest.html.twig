{% extends 'base.html.twig' %}

{% block body %}
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-4 py-12">
        <div class="text-center pb-12">
            <h2 class="text-base font-bold text-indigo-600">
                Demandes d'amis
            </h2>
        </div>
        <ul class="list-disc pl-5">
            {% for friendRequest in receivedFriendRequests %}
                <li class="mb-2">
                    {{ friendRequest.sender.getUsername() }}
                    <form action="{{ path('app_user_friends_requests_accept', { 'id': friendRequest.id }) }}" method="post">
                        <button type="submit" class="text-indigo-600 text-sm font-semibold">
                            Accepter la demande
                        </button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
